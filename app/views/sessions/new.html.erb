<% provide(:title, "Sign in") %>
<h1 class="title">Sign in</h1>

      <%= form_for(:session, url: sessions_path, html: { class: "form-horizontal", role: "form" } ) do |f| %>

        <div class="form-group">
          <%= f.label :email, class: "col-sm-3 control-label input-lg" %>
          <div class="col-sm-6">
          <%= f.text_field :email, class: "form-control input-lg", placeholder: "Click here to enter your email" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "col-sm-3 control-label input-lg"%>
          <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control input-lg", placeholder: "Click here to enter your password" %>
          </div>
        </div>

        <div class="form-group">
        <div class="col-sm-offset-4">
          <%= f.submit "Sign in!", class: "btn btn-lg btn-success" %>
        </div>
        </div>

      </div>
    <% end %>

