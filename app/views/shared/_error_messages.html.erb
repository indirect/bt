<% if object.errors.any? %>
  <div class="panel panel-danger">
      <div class="panel-heading">
        <strong>The form contains <%= pluralize(object.errors.count, "error") %>.</strong>
      </div>
      <div class="panel-body">
      <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
      </div>
  </div>
<% end %>